<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/blueDark</item>
        <item name="android:statusBarColor">@color/blueDark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="LogoText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">44sp</item>
        <item name="android:fontFamily">@font/exo2_bold</item>
    </style>

    <style name="TextMedium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TextSmall">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

</resources>